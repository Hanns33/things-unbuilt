---
import BaseLayout from '../../layouts/BaseLayout.astro';
import FloatingFeedback from '../../components/FloatingFeedback.astro';

---

<BaseLayout title="Project: candle">
  <h1 class="text-2xl font-bold mb-4">candle</h1>
  <p>This is the write-up for the candle project.</p>
</BaseLayout>
<FloatingFeedback />


<section>
  <h2 class="text-2xl font-semibold mt-8">Feedback</h2>
  <form class="mt-4 flex flex-col space-y-4">
    <textarea class="w-full p-3 border border-gray-300 rounded" rows="5" placeholder="Write your comment or question..."></textarea>
    <button type="submit" class="bg-black text-white px-6 py-2 rounded hover:bg-gray-800">
      Submit
    </button>
  </form>
</section>