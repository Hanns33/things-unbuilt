---
import '/src/styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Shade Project</title>
  </head>
  <body class="font-sans p-4 max-w-screen-md mx-auto">
    <nav class="space-x-4 text-lg">
      <a href="/" class="hover:underline">home</a>
      <a href="/randoms" class="hover:underline">randoms</a>
      <a href="/blog" class="hover:underline">blog</a>
        </div>
      </div>
    </nav>

    <main class="max-w-3xl mx-auto p-4 space-y-8">
      <h1 class="text-3xl font-bold">Shade Project</h1>
      <p class="text-gray-700">where we designed a sun shade for a parking lot wedding</p>

      <section class="grid grid-cols-1 gap-4">
        <img src="/1.jpg" alt="Image 1" class="mb-20" />
        <img src="/2.jpg" alt="Image 2" class="mb-20" />
        <img src="/3.jpg" alt="Image 3" class="mb-20" />
      </section>

      <section>
        <h2 class="text-2xl font-semibold mt-8">Feedback</h2>
        <form class="mt-4 flex flex-col space-y-4">
          <textarea class="w-full p-3 border border-gray-300 rounded" rows="5" placeholder="Write your comment or question..."></textarea>
          <button type="submit" class="bg-black text-white px-6 py-2 rounded hover:bg-gray-800">
            Submit
          </button>
        </form>
      </section>
    </main>

    <script>
      function updateMainImage(src) {
        const main = document.getElementById('mainImage');
        main.src = src;
      }
    </script>
  </body>
</html>
